<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetTimeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.009">

            <ImageView
                android:id="@+id/img_real_humi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/air_huni" />

            <TextView
                android:id="@+id/text_real_humi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_real_humi"
                android:layout_marginLeft="50dp"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/text_real_humi_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_real_humi"
                android:layout_marginLeft="18dp"
                android:text="Độ ẩm thực tế"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/img_real_temp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/text_real_humi_1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/temp" />

            <TextView
                android:id="@+id/text_real_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_real_temp"
                android:layout_marginLeft="50dp"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/text_real_temp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_real_temp"
                android:layout_marginLeft="18dp"
                android:text="Nhiệt độ thực tế"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/img_change_weather"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@id/img_real_temp"
                android:src="@drawable/sunsight1_png" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_change_weather"
                android:layout_marginLeft="90dp"
                android:layout_toRightOf="@id/img_real_temp"
                android:text="Tình trạng thời tiết"
                android:textSize="20dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.956">

            <ImageView
                android:id="@+id/img_icon_clock"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="33dp"
                android:layout_toRightOf="@id/tv_settime1"
                android:src="@drawable/icon_clock"
                />
            <TextView
                android:id="@+id/tv_settime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="60dp"
                android:text="Thời gian: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_time1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_settime1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="4dp"
                />

            <Switch
                android:id="@+id/check_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_settime2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/edit_time1"
                android:clickable="true" />

            <TextView
                android:id="@+id/tv_settime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_time1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text="Khoảng thời gian: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_time2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_settime2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/tv_settime3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_time2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/tv_settime2"
                android:text="Thời gian lặp lại:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_time3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_settime3"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_settime2"
                android:layout_marginTop="5dp" />

            <Switch
                android:id="@+id/check_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_settime3"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/edit_time3" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>